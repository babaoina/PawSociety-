<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Top Bar - Instagram Style -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mark_18"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="âœš"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="ðŸ“¨"
            android:textColor="#000000"
            android:textSize="22sp" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0" />

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:background="#EFEFEF"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:layout_marginEnd="12dp">

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="ðŸ”"
                android:textSize="16sp"
                android:textColor="#8E8E8E" />

            <EditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Search"
                android:textColorHint="#8E8E8E"
                android:textSize="14sp"
                android:background="@null"
                android:layout_marginStart="8dp"
                android:maxLines="1"
                android:imeOptions="actionSearch" />

        </LinearLayout>

    </LinearLayout>

    <!-- Messages Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/tab_primary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Primary"
            android:textColor="#FF6B35"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/tab_general"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="General"
            android:textColor="#8E8E8E"
            android:textSize="14sp"
            android:paddingBottom="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/tab_requests"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Requests"
            android:textColor="#8E8E8E"
            android:textSize="14sp"
            android:paddingBottom="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Active Tab Indicator -->
    <View
        android:id="@+id/tab_indicator"
        android:layout_width="60dp"
        android:layout_height="2dp"
        android:background="#FF6B35"
        android:layout_marginStart="16dp" />

    <!-- Messages List with RecyclerView - NO FAKE CHATS -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/inbox_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="visible">

            <TextView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="ðŸ‘¥"
                android:textSize="60sp"
                android:background="#F5F5F5" />

            <TextView
                android:id="@+id/empty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No other users yet"
                android:textColor="#7A4F2B"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="When other people register, they will appear here"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </FrameLayout>

    <!-- Bottom Navigation - EXACT same as other pages -->
    <include
        layout="@layout/bottom_nav_unified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>