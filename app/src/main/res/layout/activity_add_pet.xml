<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <TextView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="center"
            android:text="â†"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Pet"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image Picker -->
            <FrameLayout
                android:id="@+id/fl_image_picker"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/iv_pet_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_image_placeholder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Tap to select image"
                    android:textColor="#757575"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Pet Name -->
            <EditText
                android:id="@+id/et_pet_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pet Name"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="12dp" />

            <!-- Pet Breed -->
            <EditText
                android:id="@+id/et_pet_breed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pet Breed"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="12dp" />

            <!-- Pet Age -->
            <EditText
                android:id="@+id/et_pet_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pet Age (e.g., 2 years)"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="24dp" />

            <!-- Save Button -->
            <Button
                android:id="@+id/btn_save_pet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Save Pet"
                android:textColor="#FFFFFF"
                android:backgroundTint="#7A4F2B"
                android:textStyle="bold" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
