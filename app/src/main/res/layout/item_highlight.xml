<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="4dp"
    android:layout_marginEnd="12dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Circle with border -->
    <FrameLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/circle_border_highlight">

        <!-- Solid color circle background -->
        <View
            android:id="@+id/highlight_circle_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="@drawable/circle_solid_highlight" />

        <!-- Emoji on top -->
        <TextView
            android:id="@+id/highlight_circle_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="ðŸ¶"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:background="@null" />
    </FrameLayout>

    <!-- Highlight title -->
    <TextView
        android:id="@+id/highlight_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highlight"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:ellipsize="end" />
</LinearLayout>