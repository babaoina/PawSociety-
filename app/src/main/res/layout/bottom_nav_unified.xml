<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="#FFFFFF"
    android:elevation="8dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingBottom="8dp"
    android:paddingTop="4dp">

    <!-- Home Button -->
    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/nav_home_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/nav_home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="11sp"
            android:layout_marginTop="2dp"
            android:textColor="#666666" />
    </LinearLayout>

    <!-- Inbox Button -->
    <LinearLayout
        android:id="@+id/nav_inbox"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/nav_inbox_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/inbox" />

        <TextView
            android:id="@+id/nav_inbox_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inbox"
            android:textSize="11sp"
            android:layout_marginTop="2dp"
            android:textColor="#666666" />
    </LinearLayout>

    <!-- PAW Post Button -->
    <LinearLayout
        android:id="@+id/nav_paw_post"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/nav_paw_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/paw" />
    </LinearLayout>

    <!-- Find Button -->
    <LinearLayout
        android:id="@+id/nav_find"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/nav_find_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/find" />

        <TextView
            android:id="@+id/nav_find_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find"
            android:textSize="11sp"
            android:layout_marginTop="2dp"
            android:textColor="#666666" />
    </LinearLayout>

    <!-- Profile Button -->
    <LinearLayout
        android:id="@+id/nav_profile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/nav_profile_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/nav_profile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="11sp"
            android:layout_marginTop="2dp"
            android:textColor="#666666" />
    </LinearLayout>
</LinearLayout>