<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <TextView
            android:id="@+id/btn_close_comments"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="âœ•"
            android:textSize="20sp"
            android:textColor="#666666"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Comments"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="â€¢â€¢â€¢"
            android:textSize="20sp"
            android:textColor="#666666" />
    </LinearLayout>

    <!-- Post Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#F8F8F8">

        <TextView
            android:id="@+id/comment_post_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="ðŸ¶"
            android:textSize="24sp"
            android:background="#7A4F2B"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/comment_post_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/comment_post_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post caption here"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Comments List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/comments_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Sample Comments - These will be populated dynamically -->
            <LinearLayout
                android:id="@+id/comment_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="JD"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="#7A4F2B" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="john_doe"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="So cute! Hope you find your pet soon! ðŸ¾"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2h ago"
                        android:textColor="#999999"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="â¤ï¸"
                    android:textSize="16sp"
                    android:textColor="#FF6B35" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/comment_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="JS"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="#B88B4A" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="jane_smith"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I saw a dog matching this description near the mall!"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5h ago"
                        android:textColor="#999999"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="â¤ï¸"
                    android:textSize="16sp"
                    android:textColor="#999999" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/comment_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="MC"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:background="#4CAF50" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mary_cruz"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shared in our community group. Hope you find Max! ðŸ™"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1d ago"
                        android:textColor="#999999"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="â¤ï¸"
                    android:textSize="16sp"
                    android:textColor="#999999" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Add Comment Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <EditText
            android:id="@+id/comment_input"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Add a comment..."
            android:textColorHint="#999999"
            android:textSize="14sp"
            android:background="@drawable/edittext_bg"
            android:paddingHorizontal="16dp"
            android:maxLines="3" />

        <TextView
            android:id="@+id/btn_post_comment"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="Post"
            android:textColor="#FF6B35"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingHorizontal="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

</LinearLayout>