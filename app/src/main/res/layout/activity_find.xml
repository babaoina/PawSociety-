<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5E6D3">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Pets"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_add_pet"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="+"
            android:textColor="#FFFFFF"
            android:background="#4CAF50"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Search Bar with White Background and Brown Edges -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FAFAFA">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:gravity="center_vertical"
            android:background="@drawable/search_background">  <!-- This now has white bg + brown border -->

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="ðŸ”"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Search pets, breeds, locations..."
                android:textColorHint="#999999"
                android:textSize="14sp"
                android:background="@null"
                android:layout_marginStart="8dp"
                android:maxLines="1" />
        </LinearLayout>

        <!-- Filter Button -->
        <LinearLayout
            android:id="@+id/btn_filter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#7A4F2B"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="âš™ï¸"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Filter Chips Removed -->

    <!-- Grid of Pet Pictures -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/find_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="2dp"
        android:clipToPadding="false" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:padding="32dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="ðŸ¾"
            android:textSize="60sp"
            android:background="#F5F5F5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No pets found"
            android:textColor="#7A4F2B"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check back later for new posts!"
            android:textColor="#666666"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <include
        layout="@layout/bottom_nav_unified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B88B4A" />

</LinearLayout>