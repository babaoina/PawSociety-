<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5E6D3">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/margin_large"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:textColor="#000000"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_settings"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:gravity="center"
            android:text="âš™ï¸"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_large">

                <!-- Profile Picture with Circle Border -->
                <LinearLayout
                    android:layout_width="@dimen/profile_pic_size"
                    android:layout_height="@dimen/profile_pic_size"
                    android:gravity="center"
                    android:background="@drawable/circle_border"
                    android:padding="3dp">

                    <FrameLayout
                        android:layout_width="@dimen/profile_pic_inner"
                        android:layout_height="@dimen/profile_pic_inner">

                        <View
                            android:id="@+id/profile_circle_background"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/circle_solid_profile" />

                        <TextView
                            android:id="@+id/profile_initial"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="K"
                            android:textSize="@dimen/text_size_xxxlarge"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:background="@null" />
                    </FrameLayout>
                </LinearLayout>

                <!-- Stats -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_post_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#000000"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Posts"
                                android:textColor="#666666"
                                android:textSize="@dimen/text_size_xs" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_follower_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="156"
                                android:textColor="#000000"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Followers"
                                android:textColor="#666666"
                                android:textSize="@dimen/text_size_xs" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_following_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="132"
                                android:textColor="#000000"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Following"
                                android:textColor="#666666"
                                android:textSize="@dimen/text_size_xs" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Edit Profile Button -->
                    <TextView
                        android:id="@+id/btn_edit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_small"
                        android:layout_marginTop="@dimen/margin_small"
                        android:gravity="center"
                        android:text="Edit Profile"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/text_size_xs"
                        android:textStyle="bold"
                        android:background="#7A4F2B"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground" />
                </LinearLayout>
            </LinearLayout>

            <!-- Bio Section -->
            <TextView
                android:id="@+id/tv_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/margin_large"
                android:paddingBottom="@dimen/margin_medium"
                android:text="Full Name\nLocation\nPet lover and rescuer ðŸ¶â¤ï¸"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_normal"
                android:lineSpacingExtra="2dp" />

            <!-- Story Highlights Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Story Highlights"
                android:textColor="#7A4F2B"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:paddingHorizontal="@dimen/margin_large"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_tiny" />

            <!-- Dynamic Highlights Container -->
            <HorizontalScrollView
                android:id="@+id/highlights_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingRight="@dimen/margin_medium"
                android:paddingBottom="@dimen/margin_small">

                <LinearLayout
                    android:id="@+id/highlights_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/margin_tiny">
                </LinearLayout>
            </HorizontalScrollView>

            <!-- POSTS AND FAVORITES TABS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:orientation="horizontal"
                android:background="#7A4F2B"
                android:elevation="2dp">

                <!-- Posts Tab -->
                <LinearLayout
                    android:id="@+id/tab_posts"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tab_posts_icon"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:gravity="center"
                        android:text="ðŸ“‹"
                        android:textColor="#FFFFFF"
                        android:textSize="@dimen/text_size_medium" />
                </LinearLayout>

                <!-- Favorites Tab -->
                <LinearLayout
                    android:id="@+id/tab_favorites"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground">

                    <ImageView
                        android:id="@+id/tab_favorites_icon"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:src="@drawable/favorites"
                        android:scaleType="centerInside" />
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0" />

            <!-- Posts Grid Container -->
            <FrameLayout
                android:id="@+id/posts_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="300dp"
                android:background="#F9F9F9">

                <!-- Big Plus Circle -->
                <LinearLayout
                    android:id="@+id/big_plus_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:background="@drawable/circle_transparent_brown_border">

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="#7A4F2B"
                            android:textSize="@dimen/text_size_xxxlarge"
                            android:background="@android:color/transparent" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Post"
                        android:textColor="#7A4F2B"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/margin_tiny" />
                </LinearLayout>

                <!-- Posts Grid -->
                <LinearLayout
                    android:id="@+id/posts_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/grid_spacing_large"
                    android:visibility="gone">
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        layout="@layout/bottom_nav_unified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>