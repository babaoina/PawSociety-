<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:elevation="4dp"
    android:padding="0dp">

    <!-- White background for the card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <!-- Post Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- Profile Icon -->
            <TextView
                android:id="@+id/post_profile_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="ðŸ¶"
                android:textSize="20sp"
                android:background="#7A4F2B"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/post_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/post_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="#8E8E8E"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- More Options -->
            <TextView
                android:id="@+id/btn_more"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="â‹®"
                android:textColor="#666666"
                android:textSize="24sp" />
        </LinearLayout>

        <!-- Post Image - TALLER FOR WIDER LOOK -->
        <View
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#E0E0E0" />

        <!-- Post Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:gravity="center_vertical"
            android:background="#FAFAFA">

            <!-- Like Button -->
            <ImageView
                android:id="@+id/btn_like"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/heart"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Like"
                android:textColor="#FF6B35"
                android:textSize="12sp"
                android:layout_marginStart="4dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Comment Button -->
            <TextView
                android:id="@+id/btn_comment"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="ðŸ’¬"
                android:textColor="#666666"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginStart="4dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Share Button -->
            <TextView
                android:id="@+id/btn_share"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="â†ª"
                android:textColor="#666666"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <!-- Post Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/post_pet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Name"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/post_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="#2196F3"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <!-- REWARD FIELD - Only visible for Lost posts -->
            <TextView
                android:id="@+id/post_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’° Reward: "
                android:textColor="#7A4F2B"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/post_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:maxLines="3"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/post_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact: 09123456789"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date and time"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>